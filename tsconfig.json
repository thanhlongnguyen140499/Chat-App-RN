{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["@types", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "types/*": ["./@types/*"]
    },
    "lib": [
      "ES6",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
